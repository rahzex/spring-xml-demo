<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="oneActor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="John"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="25"/>
    </bean>

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Sounak"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="26"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Gopal"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="23"/>
    </bean>

    <bean id="movie1" class="com.stackroute.domain.Movie" scope="prototype" autowire="byName">

    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie" scope="prototype" autowire="constructor">

    </bean>

    <bean class="com.stackroute.demo.BeanLifeCycleDemoBean" init-method="customInit" destroy-method="customDestroy"/>

</beans>